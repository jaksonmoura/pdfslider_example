<%= form_for @presentation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_id_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :qte_slides, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :qte_slides, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :upload, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :upload, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                presentations_path, :class => 'btn' %>
  </div>
<% end %>
